@model MiBibliotecaDigital.Models.Prestamos

@{
    ViewData["Title"] = "Registrar Préstamo";
}

<h2>Registrar Préstamo</h2>

<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input asp-for="UsuarioId" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Libro</label>
        <input asp-for="LibroId" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha de Devolución</label>
        <input asp-for="FechaDevolucionProgramada" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
