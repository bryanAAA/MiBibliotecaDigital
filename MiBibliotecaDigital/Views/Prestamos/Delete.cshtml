@model MiBibliotecaDigital.Models.Prestamos

@{
    ViewData["Title"] = "Eliminar Préstamo";
}

<h2>¿Estás seguro de que quieres eliminar este préstamo?</h2>

<p><strong>Usuario ID:</strong> @Model.UsuarioId</p>
<p><strong>Libro ID:</strong> @Model.LibroId</p>
<p><strong>Fecha de Préstamo:</strong> @Model.FechaPrestamo.ToShortDateString()</p>
<p><strong>Fecha de Devolución Programada:</strong> @Model.FechaDevolucionProgramada.ToShortDateString()</p>
<p><strong>Estado:</strong> @Model.Estado</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="PrestamoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
