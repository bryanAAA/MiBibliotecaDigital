@model MiBibliotecaDigital.Models.Prestamos

@{
    ViewData["Title"] = "Detalles del Préstamo";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <table class="table">
        <tr><th>Usuario ID:</th><td>@Model.UsuarioId</td></tr>
        <tr><th>Libro ID:</th><td>@Model.LibroId</td></tr>
        <tr><th>Fecha de Préstamo:</th><td>@Model.FechaPrestamo.ToShortDateString()</td></tr>
        <tr><th>Fecha de Devolución Programada:</th><td>@Model.FechaDevolucionProgramada.ToShortDateString()</td></tr>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    <a asp-action="Edit" asp-route-id="@Model.PrestamoId" class="btn btn-warning">Editar</a>

    <form asp-action="Delete" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.PrestamoId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
</div>
