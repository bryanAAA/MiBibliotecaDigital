@model MiBibliotecaDigital.Models.Libros

@{
    ViewData["Title"] = "Detalles del Libro";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <table class="table">
        <tr><th>Título:</th><td>@Model.Titulo</td></tr>
        <tr><th>Editorial:</th><td>@Model.Editorial</td></tr>
    </table>

    <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    <a asp-action="Edit" asp-route-id="@Model.LibroId" class="btn btn-warning">Editar</a>

    <form asp-action="Delete" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.LibroId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
</div>
