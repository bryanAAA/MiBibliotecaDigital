<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiBibliotecaDigital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MiBibliotecaDigital.styles.css" asp-append-version="true" />
</head>
<body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Mi Biblioteca Digital</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Libros" asp-action="Index">Libros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Autores" asp-action="Index">Autores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Prestamos" asp-action="Index">Préstamos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>&copy; @DateTime.Now.Year - Mi Biblioteca Digital</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
