@model IEnumerable<MiBibliotecaDigital.Models.Categorias>

@{
    ViewData["Title"] = "Lista de Categorías";
}

<div class="container mt-4">
    <h2 class="text-center">Lista de Categorías</h2>

    <a asp-action="Form" class="btn btn-success mb-3">
        <i class="bi bi-plus-lg"></i> Agregar Categoría
    </a>

    <table class="table table-striped">
        <thead>
            <tr><th>Nombre</th><th>Acciones</th></tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nombre</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@categoria.CategoriaId" class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Form" asp-route-id="@categoria.CategoriaId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@categoria.CategoriaId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
