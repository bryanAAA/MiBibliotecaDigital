@model MiBibliotecaDigital.Models.Autores

@{
    ViewData["Title"] = "Eliminar Autor";
}

<h2>¿Estás seguro de que quieres eliminar este autor?</h2>

<p><strong>Nombre:</strong> @Model.Nombre</p>
<p><strong>Apellidos:</strong> @Model.Apellidos</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="AutorId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
