@model IEnumerable<MiBibliotecaDigital.Models.Autores>

@{
    ViewData["Title"] = "Lista de Autores";
}

<div class="container mt-4">
    <h2 class="text-center">Lista de Autores</h2>
    
    <a asp-action="Form" class="btn btn-success mb-3">
        <i class="bi bi-plus-lg"></i> Agregar Autor
    </a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Nacionalidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var autor in Model)
            {
                <tr>
                    <td>@autor.Nombre</td>
                    <td>@autor.Apellidos</td>
                    <td>@autor.Nacionalidad</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@autor.AutorId" class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Form" asp-route-id="@autor.AutorId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@autor.AutorId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
