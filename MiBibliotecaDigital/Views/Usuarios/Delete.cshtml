@model MiBibliotecaDigital.Models.Usuarios

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>¿Estás seguro de que quieres eliminar este usuario?</h2>

<p><strong>Nombre:</strong> @Model.NombreCompleto</p>
<p><strong>Correo:</strong> @Model.CorreoElectronico</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="UsuarioId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
