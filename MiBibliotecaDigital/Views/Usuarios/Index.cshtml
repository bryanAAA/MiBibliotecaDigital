@model IEnumerable<MiBibliotecaDigital.Models.Usuarios>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-4">
    <h2 class="text-center">Lista de Usuarios</h2>

    <a asp-action="Form" class="btn btn-success mb-3">
        <i class="bi bi-plus-lg"></i> Registrar Usuario
    </a>

    <table class="table table-striped">
        <thead>
            <tr><th>Nombre</th><th>Correo</th><th>Acciones</th></tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.NombreCompleto</td>
                    <td>@usuario.CorreoElectronico</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@usuario.UsuarioId" class="btn btn-primary btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
